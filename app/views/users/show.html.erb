<% provide(:title, @user.name) %>
<h1><%= @user.name %>のマイページ</h1>

<div>
    <table class="table-radius">
      <thead>
        <tr>
          <% if @current_weather.weather_main == "FALSE" %>
            <th class="center"><%= @user.name %>の天気情報はありません</th>
          <% else %>
            <th class="center"><h1><%= @city.name %>の天気<h1></th>
          <% end %>
        </tr>
      </thead>

        <tr>
          <td class="center"><%= l(@current_weather.updated_at, formats: :middle) if @current_weather.updated_at.present? %></td>
        </tr>
        <tr>
          <td class="center"><%= image_tag "http://openweathermap.org/img/wn/#{@current_weather.weather_icon.chop}d@2x.png" %></td>
        </tr>
        <tr>
          <td class="center"><h2><%= @current_weather.weather_description %></h2></td>
        </tr>
        <tr>
          <td class="center"><h2><%= @current_weather.temp %>℃</h2></td>
        </tr>
        <tr>
          <td class="center"><h2>湿度　<%= @current_weather.humidity %>％</h2></td>
        </tr>
    </table>
</div>
