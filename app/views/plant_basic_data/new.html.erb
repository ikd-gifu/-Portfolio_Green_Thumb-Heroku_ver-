<% provide(:title, 'New PlatBasicDatum') %>

<h1>植物基本情報新規作成</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with(model: @plant_basic_datum, url: user_plant_basic_data_path(current_user), local: true, method: :post) do |f| %>

      <%= f.label :user_id, "ユーザーID", class: "label-login" %>
      <%= f.text_field :user_id, class: 'form-control' %>

      <%= f.label :plant_name, "植物名", class: "label-login" %>
      <%= f.text_field :plant_name, class: 'form-control' %>

      <%= f.label :plant_breed_name, "品種名", class: "label-login" %>
      <%= f.text_field :plant_breed_name, class: 'form-control' %>

      <%= f.label :plant_family_name, "科名", class: "label-login" %>
      <%= f.text_field :plant_family_name, class: 'form-control' %>

      <%= f.label :plant_place_of_origin, "原産地", class: "label-login" %>
      <%= f.text_field :plant_place_of_origin, class: 'form-control' %>

      <%= f.submit "新規作成", class: "btn btn-primary btn-block btn-login" %>
    <% end %>
  </div>
</div>